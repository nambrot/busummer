<h1>Listing listings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Lowbudget</th>
    <th>Highbudget</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.name %></td>
    <td><%= listing.email %></td>
    <td><%= listing.lowbudget %></td>
    <td><%= listing.highbudget %></td>
    <td><%= listing.start_date %></td>
    <td><%= listing.end_date %></td>
    <td><%= listing.location %></td>
    <td><%= listing.description %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

